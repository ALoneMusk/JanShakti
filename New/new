<script type="text/javascript">

	function fetchdata(elements) 
{
	var show = document.getElementById(elements);
	if (show != null) 
	{
		if (show.style.display == "block") 
		{
			show.style.display = 'none';
		}
		else
		{
			show.style.display = 'block';
		}
	return false;
	}
}

</script>


